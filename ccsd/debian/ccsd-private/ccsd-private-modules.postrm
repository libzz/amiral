#!/bin/sh
set -e

if [ "$1" != "remove" ]; then
        exit 0
fi

# Restart the daemon so that the new modules are picked up.
if [ -x "/etc/init.d/ccsd" ]; then
        if [ -x "`which invoke-rc.d 2>/dev/null`" ]; then
                invoke-rc.d ccsd restart || exit 0
        else
                /etc/init.d/ccsd restart || exit 0
        fi
fi

exit 0
